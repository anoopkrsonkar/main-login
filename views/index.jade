extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-3.col-md-offset-4
				img(src='/stylesheets/images/passportjs-logo.png', class='logo-img')
				h1.text-center.login-title Sign in to our AreaHop Page
				div.account-wall
						
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Email Or Username',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Password', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
							span.clearfix
					a(href='/signup', class='text-center new-account') Create an account
					#message
					if message
						h1.text-center.error-message #{message}
				a(href='/login/facebook', class='btn btn-block btn-social btn-facebook') Login with Facebook
					i(class='fa fa-facebook')
				a(href='/login/google-plus', class='btn btn-block btn-social btn-google-plus') Login with Google-Plus
					i(class='fa fa-google-plus')
				a(href='/login/twitter', class='btn btn-block btn-social btn-twitter') Login with Twitter 
					i(class='fa fa-twitter')
				a(href='/login/linkedin', class='btn btn-block btn-social btn-linkedin') Login with Linkedin
					i(class='fa fa-linkedin')

					
					